# Notion API credentials
NOTION_API_KEY=your_integration_token_here

# If you have one database:
NOTION_DATABASE_ID=your_database_id_here

# OR, if you want to be able to target multiple DBs:
# (you can parse this comma-separated list in your script)
NOTION_DATABASE_IDS=db_id_1,db_id_2,db_id_3

# Timezone for scheduling (used by python-dotenv + pytz)
TIMEZONE=Australia/Sydney

# (Optional) Default offsets for your R-dates (in days)
R1_OFFSET=1
R2_OFFSET=3
R3_OFFSET=7
R4_OFFSET=14
